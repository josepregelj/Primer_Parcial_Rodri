<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/carimg"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/brandlist"
        app:layout_constraintHorizontal_bias="0.678"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brandlist"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="?android:attr/statusBarColor"
        app:layout_constraintEnd_toStartOf="@+id/user_acces_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_acces_item"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
